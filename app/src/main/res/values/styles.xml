<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorEdiTextLine</item>
        <item name="colorControlHighlight">@color/colorEdiTextLine</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeExams" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryExams</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkExams</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorEdiTextLine</item>
        <item name="colorControlHighlight">@color/colorEdiTextLine</item>
    </style>


    <style name="Theme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="BaseCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="BaseCardViewStyleSubject" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDarkExams</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
    </style>


</resources>
